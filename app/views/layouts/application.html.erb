<!DOCTYPE html>
<html>
  <!-- render partials -->
  <%= render'layouts/head' %>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>

    <!-- To display debug information -->
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
